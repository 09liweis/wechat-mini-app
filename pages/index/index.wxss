/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.todo {
  box-shadow:0 1rpx 6rpx rgba(0,0,0,.117647), 0 1rpx 4rpx rgba(0,0,0,.117647);
  margin-bottom:20rpx;
  border-left-width:10rpx;
  border-left-style:solid;
  transition: 0.3s;
  position: relative;
}
.todo-detail {
  background-color: #fff;
  position: relative;
  z-index: 1;
  width: 100%;
  padding: 20rpx;
  left: 0;
  top: 0;
}
.todo-delete {
  position: absolute;
  z-index: 0;
  right: 0;
  top: 0;
  background-color: red;
  color: #fff;
  padding: 20rpx;
}
.steps {
  color: orange;
}
.todo-hover {
  opacity: 0.8;
  background-color: rgb(230, 230, 230);
}
.todo.done {
  border-color:green;
}
.todo.pending {
  border-color:red;
}
.todo.working {
  border-color:yellow;
}
#add-btn {
  font-size: 50rpx;
  position:fixed;
  bottom:50rpx;
  right:50rpx;
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 50%;
  z-index: 2;
  background-color: #33691e;
  color: #fff;
  transition: all 0.3s linear;
}
.add-hover {
  transform: scale(0.75,0.75);
}