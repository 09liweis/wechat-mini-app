<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="todos">
    <view wx:for="{{todos}}" wx:key="_id" class="todo" class="todo {{item.status}} {{selected === index ? 'active': ''}}" data-index="{{index}}" bindtap="toDetail">
      <view>{{item.name}}</view>
      <view>{{item.date}}</view>
    </view>
  </view>
  <button bindtap="toForm" size="{{btnSz}}" class="add">{{selected === ''?'Add':'Close'}}</button>
</view>
