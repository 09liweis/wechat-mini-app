/* pages/visuals.wxss */
.visualPage {
  font-size: 24rpx;
  padding: 0 20rpx;
  background-color: #ccc;
}
.visual-container {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  position: relative;
}
.visual-hover {
  opacity: 0.7;
  background-color: honeydew;
}
.progress {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 4rpx 8rpx;
  background-color: chocolate;
  color: #fff;
}
.poster {
  border-radius: 6rpx;
  flex:1;
}
.detail {
  margin-left: 20rpx;
  flex: 2;
}
.title {
  display: block;
  font-weight: bold;
  font-size: 36rpx;
}
