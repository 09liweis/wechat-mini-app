<!--pages/visuals.wxml-->
<view class="visualPage">
  <view class="visualContainer" wx:for="{{visuals}}" wx:key="id" bindtap="toDetail" data-doubanId="{{item.douban_id}}">
    <view class="progress">{{item.current_episode}}/{{item.episodes}}</view>
    <image mode="widthFix" class="poster" src="{{item.poster}}"></image>
    <view class="detail">
      <text class="title">{{item.title}}</text>
      <text>豆瓣:{{item.douban_rating}}</text>
      <view>{{item.countries}}</view>
    </view>
  </view>
</view>