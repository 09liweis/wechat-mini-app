/* pages/transactions/transactions.wxss */
.transactions {
  margin: 0 10px;
}
.total {
  color: red;
  font-size: 30px;
  text-align: center;
}
.transaction {
  box-shadow:0 1px 6px rgba(0,0,0,.117647), 0 1px 4px rgba(0,0,0,.117647);
  margin-top:10px;
  padding:10px;
  border-left-width:5px;
  border-left-style:solid;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left {
  display: flex;
  flex-direction: column;
}
.cat {
  text-transform: capitalize;
  font-weight: bold;
  color: burlywood;
}
.date {
  font-size: 12px;
  color: grey;
}
.price {
  color: red;
}
.icon {
  width: 20px;
  height: 20px;
}