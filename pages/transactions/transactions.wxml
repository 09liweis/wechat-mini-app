<!--pages/transactions/transactions.wxml-->
<view class="transactions">
  <text class="total">${{total}}</text>
  <button size="mini" type="primary" bindtap="showFitlers">过滤</button>
  <modal class="fitlers" hidden="{{hideFilters}}" title="请选择过滤" confirm-text="确定" cancel-text="取消" bindcancel="cancel" bindconfirm="getTransactions">
    <picker mode="date" fields="month" value="{{date}}" bindchange="getDateTime">
      <view class="selectDate">{{date?date:'Select a date'}}</view>
    </picker>
  </modal>
  <view class="transaction" wx:for="{{transactions}}" wx:key="_id">
    <view class="left">
      <image class="icon" mode="scaleToFill" src="{{item.place.icon}}"></image>
      <text class="title">{{item.title}}</text>
      <text class="cat">{{item.category}}</text>
      <text class="date">{{item.date}}</text>
    </view>
    <view class="right">
      <text class="price">${{item.price*-1}}</text>
    </view>
  </view>
</view>
