.recommends {
  overflow-x: auto;
  white-space: nowrap;
}
.recommend {
  width: 200rpx;
  display: inline-block;
  margin-right: 10rpx;
  position: relative;
}
.recommend-poster {
  width: 100%;
  height: 300rpx;
}
.recommend-title {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  padding: 5rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  text-align: center;
  white-space: normal;
}